    }

    model-viewer {
      width: 100%;
      max-width: 600px;
      height: 400px;
      border-radius: 12px;
      background-color: transparent;
    }

    .buttons {
      margin-top: 15px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
    }

    .buttons button {
      background: #292F3D;
      border: none;
      color: white;
