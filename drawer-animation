<body>

<h2>3D Drawer Showcase</h2>

<model-viewer
  id="viewer"
  src="https://memo-international.github.io/VR/GBL/Drawer Showcase-move-3.glb"
  alt="MI-MMV1-0020-12M"
  camera-controls
  shadow-intensity="0.1"
  camera-orbit="45deg 75deg 50m"
  background-color="transparent"
  style="width:100%; height:400px;">
</model-viewer>

<!-- Buttons container -->
<div class="buttons" id="animation-buttons"></div>

<!-- Tooltip -->
<div id="tooltip"></div>

<script>
  const viewer = document.getElementById('viewer');
  const buttonsContainer = document.getElementById('animation-buttons');
  const tooltip = document.getElementById('tooltip');

  // Aqui você define os nomes dos botões manualmente
  const buttonNames = [
    "Open Drawer 1",
    "Close Drawer 1",
    "Open Drawer 2",
    "Close Drawer 2",
    "Rotate Door"
  ];

  viewer.addEventListener('load', () => {
    const animations = viewer.availableAnimations;
    console.log('Animations found:', animations);

    // Verifica se o array tem o mesmo tamanho que animações
    if(buttonNames.length !== animations.length){
      console.warn("Warning: The number of button names does not match the number of animations. Some animations may not have a button.");
    }

    // Criar botão para cada animação
    animations.forEach((name, index) => {
      const btn = document.createElement('button');

      // Se existir nome definido no array, usa, senão coloca padrão
      btn.innerText = buttonNames[index] || `Animation ${index + 1}`;
      btn.title = name; // nome real da animação como tooltip
      btn.addEventListener('click', () => {
        viewer.animationName = name;
        viewer.play();
      });
      buttonsContainer.appendChild(btn);
    });
  });

  // Clique no modelo → redireciona
  viewer.addEventListener('click', () => {
    window.location.href = "https://seusite.com"; // seu link
  });

  // Hotspots (opcional)
  document.addEventListener('DOMContentLoaded', () => {
    const hotspots = document.querySelectorAll('.hotspot');
    hotspots.forEach(hotspot => {
      hotspot.addEventListener('mouseenter', () => {
        tooltip.innerText = hotspot.getAttribute('data-label');
        tooltip.style.display = 'block';
      });

      hotspot.addEventListener('mousemove', (e) => {
        tooltip.style.left = (e.clientX + 10) + 'px';
        tooltip.style.top = (e.clientY + 10) + 'px';
      });

      hotspot.addEventListener('mouseleave', () => {
        tooltip.style.display = 'none';
      });
    });
  });
</script>

</body>
</html>
